{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "STSOperations",
      "Effect": "Allow",
      "Action": [
        "sts:GetCallerIdentity",
        "sts:AssumeRole"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CloudFormationOperations",
      "Effect": "Allow",
      "Action": [
        "cloudformation:*"
      ],
      "Resource": [
        "arn:aws:cloudformation:ap-northeast-2:931016744724:stack/ConduitStack/*",
        "arn:aws:cloudformation:ap-northeast-2:931016744724:stack/CDKToolkit/*"
      ]
    },
    {
      "Sid": "S3Operations",
      "Effect": "Allow",
      "Action": [
        "s3:GetBucket*",
        "s3:ListBucket*",
        "s3:GetObject*",
        "s3:PutObject*",
        "s3:DeleteObject*",
        "s3:CreateBucket",
        "s3:DeleteBucket",
        "s3:PutBucket*"
      ],
      "Resource": [
        "arn:aws:s3:::cdktoolkit-stagingbucket-*",
        "arn:aws:s3:::cdktoolkit-stagingbucket-*/*",
        "arn:aws:s3:::cdk-*-assets-931016744724-ap-northeast-2",
        "arn:aws:s3:::cdk-*-assets-931016744724-ap-northeast-2/*"
      ]
    },
    {
      "Sid": "ECROperations",
      "Effect": "Allow",
      "Action": [
        "ecr:*"
      ],
      "Resource": [
        "arn:aws:ecr:ap-northeast-2:931016744724:repository/conduit-backend",
        "*"
      ]
    },
    {
      "Sid": "ServerlessOperations",
      "Effect": "Allow",
      "Action": [
        "lambda:*",
        "dynamodb:*",
        "apigateway:*"
      ],
      "Resource": [
        "arn:aws:lambda:ap-northeast-2:931016744724:function:conduit-*",
        "arn:aws:dynamodb:ap-northeast-2:931016744724:table/conduit-*",
        "arn:aws:apigateway:ap-northeast-2::/restapis/*"
      ]
    },
    {
      "Sid": "ECSOperations",
      "Effect": "Allow",
      "Action": [
        "ecs:*"
      ],
      "Resource": [
        "arn:aws:ecs:ap-northeast-2:931016744724:cluster/ConduitCluster",
        "arn:aws:ecs:ap-northeast-2:931016744724:service/ConduitCluster/*",
        "arn:aws:ecs:ap-northeast-2:931016744724:task-definition/conduit-backend-task:*",
        "arn:aws:ecs:ap-northeast-2:931016744724:task/ConduitCluster/*"
      ]
    },
    {
      "Sid": "IAMOperations",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:GetRole",
        "iam:PassRole",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:CreatePolicy",
        "iam:DeletePolicy",
        "iam:GetPolicy*",
        "iam:PutRolePolicy",
        "iam:GetRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:TagRole",
        "iam:UntagRole"
      ],
      "Resource": [
        "arn:aws:iam::931016744724:role/conduit-*",
        "arn:aws:iam::931016744724:role/ConduitStack-*",
        "arn:aws:iam::931016744724:policy/conduit-*",
        "arn:aws:iam::931016744724:policy/ConduitStack-*"
      ]
    },
    {
      "Sid": "NetworkingOperations",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:CreateSecurityGroup",
        "ec2:DeleteSecurityGroup",
        "ec2:Authorize*",
        "ec2:Revoke*",
        "ec2:CreateTags",
        "ec2:DeleteTags",
        "elasticloadbalancing:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "LogsOperations",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:DeleteLogGroup",
        "logs:Describe*",
        "logs:PutRetentionPolicy",
        "logs:TagLogGroup",
        "logs:UntagLogGroup"
      ],
      "Resource": [
        "arn:aws:logs:ap-northeast-2:931016744724:log-group:/aws/lambda/conduit-*",
        "arn:aws:logs:ap-northeast-2:931016744724:log-group:/ecs/conduit*"
      ]
    },
    {
      "Sid": "SSMOperations",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:PutParameter"
      ],
      "Resource": [
        "arn:aws:ssm:ap-northeast-2:931016744724:parameter/cdk-bootstrap/*"
      ]
    }
  ]
}